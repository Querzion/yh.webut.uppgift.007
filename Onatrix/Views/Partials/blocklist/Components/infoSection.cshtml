@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.InfoSection)Model.Content;
}

<section id="info-section" class="pt-16 bg-[#F7F7F7]">
	<div class="container mx-auto px-4 grid grid-cols-2 gap-16">
        <div class="info-img">
            @if (content.InfoImage != null)
            {
                <img src="@content.InfoImage.Url()" />
            }
        </div>
        <div class="text-[#4F5955] mt-36 leading-snug">
            <div>
                <h1 class="text-[2.5rem] w-8/12 mb-8 font-bold">@content.InfoTitle</h1>
            </div>
            <div class="flex gap-2">
                <i class="text-[var(--clr-secondary)] text-[1.125rem] bi bi-geo-alt"></i>
                <div>
                    <p class="font-semibold">@content.InfoLocationLabel</p>
                    <p class="mb-8">@content.InfoLocationText</p>
                </div>
            </div>
            <div class="flex gap-2">
                <i class="text-[var(--clr-secondary)] text-[1.125rem] bi bi-telephone"></i>
                <div>
                    <p class="font-semibold"> @content.InfoPhoneLabel</p>
                    <p class="mb-8">@content.InfoPhoneNumber</p>
                </div>
            </div>
            <div class="flex gap-2">
                <i class="text-[var(--clr-secondary)] text-[1.125rem] bi bi-envelope"></i>
                <div>
                    <p class="font-semibold"> @content.InfoEmailLabel</p>
                    <p class="mb-8">@content.InfoEmailAddress</p>
                </div>
            </div>
        </div>
	</div>
</section>