@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using Onatrix.ViewModels
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.HelpCard)Model.Content;
    var imageUrl = content.HelpCardImage?.Url() ?? "";
}

<div class="mt-6 flex flex-col gap-4 bg-primary rounded-sm overflow-hidden">
    
    <div>
        
        <div class="flex flex-col justify-center p-4">
            <h2 class="text-white-100 text-[1.375rem] font-semibold">@content.HelpCardTitle</h2>
            <p class="mt-4 mb-8 text-neutral text-rte-xs">@content.HelpCardText</p>

            <partial name="Partials/Forms/_HelpForm" model="new HelpFormViewModel()" />

            @if (TempData["FormSuccess"] != null) {
                <div class="bg-green-50 text-green-700 p-4 mt-2 rounded-md">
                    @TempData["FormSuccess"]
                </div>
            }
            @if (TempData["FormError"] != null) {
                <div class="bg-red-50 text-red-700 p-4 mt-2 rounded-md">
                    @TempData["FormError"]
                </div>
            }

        </div>
        
    </div>
    
</div>

