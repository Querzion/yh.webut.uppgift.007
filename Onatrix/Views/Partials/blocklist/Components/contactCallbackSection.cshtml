@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using Onatrix.ViewModels
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.ContactCallbackSection)Model.Content;
    var settings = Model.Settings as ContentModels.ContactCallbackSettings;

    var options = settings.CallbackRequestOptions;
    var formVM = new CallbackFormViewModel {
        Options = settings?.CallbackRequestOptions ?? []
    };

    ViewBag.FormLayout = "layout-2col";
}

<section class="py-28">
    <div class="max-w-7xl mx-auto px-4 flex gap-10">

        <div class="w-11/12 mx-auto bg-neutral shadow-md -mt-[11rem] z-[99] ">

            <div class="flex flex-col text-center ">

                <p class="text-[1.875] text-secondary font-bold">@content.ContactCallbackFormLabel</p>

                <p class="text-primary py-[1.5rem] text-[2.5rem] font-bold">@content.ContactCallbackFormTitle</p>
                
                <p class="text-xs py-[1.5rem] px-[1rem] italic">@content.ContactCallbackFormText</p>
              
            </div>
    
            <partial name="Partials/Forms/_CallbackForm" model="formVM" />

            @if (TempData["FormSuccess"] != null) {
                <div class="bg-green-50 text-green-700 p-4 mx-[2rem] mb-4 rounded-md">
                    @TempData["FormSuccess"]
                </div>
            }
            @if (TempData["FormError"] != null) {
                <div class="bg-red-50 text-red-700 p-4 mx-[2rem] mb-4 rounded-md">
                    @TempData["FormError"]
                </div>
            }

        </div>

    </div>
</section>