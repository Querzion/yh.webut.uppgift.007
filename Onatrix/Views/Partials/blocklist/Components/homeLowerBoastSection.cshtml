@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels
@{
    var content = (ContentModels.HomeLowerBoastSection)Model.Content;
}

<section class="bg-primary flex justify-center pt-16 md:pt-32 relative mb-40">
    <div class="relative max-w-7xl w-full bg-no-repeat bg-center bg-contain bg-[url('/images/boast/BoastImg1-Img3-DotMAP.svg')] px-4">
        
        <div class="flex flex-col items-center text-center space-y-6">
            
            <p class="text-rte-xs uppercase font-bold text-secondary">@content.LowerBoastLabel</p>
            <p class="text-neutral text-rte-lg font-bold">@content.LowerBoastTitle</p>

            <div class="flex flex-col lg:flex-row lg:justify-between gap-8 w-full max-w-7xl text-neutral mx-auto">
                <div class="flex flex-col lg:w-1/3">@Html.Raw(content.LowerBoastBody1)</div>
                <div class="flex flex-col lg:w-1/3">@Html.Raw(content.LowerBoastBody2)</div>
                <div class="flex flex-col lg:w-1/3">@Html.Raw(content.LowerBoastBody3)</div>
            </div>

        </div>

        <div class="w-10/12 mx-auto mt-8 relative -mb-32 lg:-mb-40 z-10">
            <img src="@content.LowerBoastImage.Url()" alt="Boast Image" class="w-full object-cover" />
        </div>
  
    </div>
</section>
