@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutReviewSection)Model.Content;
    int rating = 0;
    int.TryParse(content.ReviewSectionReviewRating, out rating);
}

<section class="flex w-full">
    <div class="max-w-5xl flex items-center bg-white-100">
        
        <div class="w-7/12 mx-auto flex flex-col text-primary">
            <p class="text-secondary text-rte-xs font-bold">@content.ReviewSectionLabel</p>
            <p class="text-rte-lg font-bold mt-2">@content.ReviewSectionTitle</p>
            <p class="mt-6 text-body-text text-rte-md italic">@content.ReviewSectionReviewText</p>

            <div class="mt-6 flex flex-row gap-1 text-yellow-400">
                @for (var i = 0; i < rating; i++)
                {
                    <svg data-slot="icon" fill="currentColor" stroke="none"
                         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"
                         class="w-5 h-5">
                        <path d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"></path>
                    </svg>
                }
            </div>

            <p class="mt-6 text-rte-xs">@content.ReviewSectionReviewName</p>
            <p class="text-rte-md italic">@content.ReviewSectionReviewAssociation</p>
        </div>    

    </div>

    <div class="w-6/12">
        <img class="w-full h-full object-cover"
             src="@content.ReviewSectionImage.Url()"
             alt="Image of @content.ReviewSectionReviewName" />
    </div>
</section>
