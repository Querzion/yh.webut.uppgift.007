@using Onatrix.ViewModels
@model QuestionFormViewModel

@using (Html.BeginUmbracoForm("HandleQuestionForm", "Form", FormMethod.Post,
    new { novalidate = "novalidate", id = "Form" }))
{
    <div class="max-w-7xl mx-auto flex flex-col gap-4">

        <div class="flex flex-col gap-4">

            <div class="flex flex-row gap-4">
                <div class="field w-full">
                    <label asp-for="Name" class="sr-only"></label>
                    <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(m => m.Name)" class="input" />
                    <span asp-validation-for="Name" class="error"></span>
                </div>

                <div class="field w-full">
                    <label asp-for="Email" class="sr-only"></label>
                    <input asp-for="Email" type="text" placeholder="@Html.DisplayNameFor(m => m.Email)" class="input" />
                    <span asp-validation-for="Email" class="error"></span>
                </div>
            </div>

            <div class="field">
                <label asp-for="Question" class="sr-only"></label>
                <textarea asp-for="Question" rows="6" placeholder="@Html.DisplayNameFor(m => m.Question)" class="input"></textarea>
                <span asp-validation-for="Question" class="error"></span>
            </div>
        </div>

        <div class="question-form__submit">
            <button type="submit">Submit</button>
        </div>
    </div>
}